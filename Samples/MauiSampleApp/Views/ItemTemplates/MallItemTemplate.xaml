<?xml version="1.0" encoding="utf-8" ?>
<ViewCell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:ObservableViewSample.Model;assembly=ObservableViewSample"
    x:Class="MauiSampleApp.Views.ItemTemplates.MallItemTemplate"
    x:DataType="model:Mall">
    <Grid
        Padding="4"
        RowSpacing="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            FontAttributes="Bold"
            Text="{Binding Title}" />
        <Label
            Grid.Row="1"
            Text="{Binding Subtitle}" />
    </Grid>
</ViewCell>