<Application
    x:Class="ObservableViewSample.WindowsPhone8.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:viewModel="clr-namespace:ObservableViewSample.ViewModel;assembly=ObservableViewSample">

    <!--Application Resources-->
    <Application.Resources>
        <viewModel:ViewModelLocator x:Key="Locator" />
        <local:LocalizedStrings xmlns:local="clr-namespace:ObservableViewSample.WindowsPhone8" x:Key="LocalizedStrings"/>
    </Application.Resources>

    <Application.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService
            Launching="Application_Launching" Closing="Application_Closing"
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
    </Application.ApplicationLifetimeObjects>

</Application>